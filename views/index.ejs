<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-zinc-900 text-white ">
    <div class="container">
    <div class="create-task" class="bg-zinc-900 ">
        <form action="/create" method="POST">
            <input type="text" placeholder="enter title" class="bg-zinc-800 flex m-3 p-3" name="title">
            <textarea name="description" id="" placeholder="" class="bg-zinc-800 flex m-3 p-3 resize-none" name="description"></textarea>
            <input type="submit" class="bg-blue-700 m-3 py-2 px-4 rounded-md">
        </form>
    </div>

    <div class="cards">
        <%if(files.length >0){%>
            <%files.forEach(function(val){%>
                <div class="card bg-zinc-800 w-[20%] p-3 m-2 rounded-md">
                    <h3> <%= val %> </h3>
                    <a href="" class="text-blue-900 ">Read more</a>
                </div>
            <%})%>

        <%}else{%>
            <h3> Nothing to display here</h3>
       <% } %>
       
        
    </div>

    
</div>
</body>
</html>